				<text><![CDATA[TVA:]]></text>
			</staticText>
			
			<textField pattern="#,##0.00">
				<reportElement x="440" y="50" width="85" height="15" forecolor="#374151"/>
				<textElement textAlignment="Right">
					<font size="11" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{taxAmount} + " " + $P{currency}]]></textFieldExpression>
			</textField>
			
			<!-- Total Line -->
			<line>
				<reportElement x="330" y="70" width="195" height="1" forecolor="#1E40AF"/>
				<graphicElement>
					<pen lineWidth="2.0"/>
				</graphicElement>
			</line>
			
			<!-- Total Amount -->
