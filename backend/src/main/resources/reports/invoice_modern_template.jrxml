	<!-- Summary Band - Totals -->
	<summary>
		<band height="200" splitType="Stretch">
			<!-- Totals Section Background -->
			<rectangle>
				<reportElement x="320" y="20" width="215" height="100" backcolor="#F1F5F9"/>
				<graphicElement>
					<pen lineWidth="1.0" lineColor="#CBD5E1"/>
				</graphicElement>
			</rectangle>
			
			<!-- Subtotal -->
			<staticText>
				<reportElement x="330" y="30" width="100" height="15" forecolor="#374151"/>
				<textElement>
					<font size="11" fontName="Arial"/>
