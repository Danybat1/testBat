					<font size="10" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{invoiceDate}]]></textFieldExpression>
			</textField>
			
			<staticText>
				<reportElement x="285" y="125" width="80" height="15" forecolor="#374151"/>
				<textElement>
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[Date d'échéance:]]></text>
			</staticText>
			
			<textField>
				<reportElement x="370" y="125" width="155" height="15" forecolor="#1F2937"/>
				<textElement textAlignment="Right">
					<font size="10" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{dueDate}]]></textFieldExpression>
			</textField>
			
			<staticText>
				<reportElement x="285" y="140" width="80" height="15" forecolor="#374151"/>
				<textElement>
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[Type:]]></text>
			</staticText>
			
			<textField>
				<reportElement x="370" y="140" width="155" height="15" forecolor="#1F2937"/>
				<textElement textAlignment="Right">
					<font size="10" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{type}]]></textFieldExpression>
			</textField>
			
			<staticText>
				<reportElement x="285" y="155" width="80" height="15" forecolor="#374151"/>
				<textElement>
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[Statut:]]></text>
			</staticText>
			
			<textField>
				<reportElement x="370" y="155" width="155" height="15" forecolor="#059669"/>
				<textElement textAlignment="Right">
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{status}]]></textFieldExpression>
			</textField>
