					<font size="28" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[FACTURE]]></text>
			</staticText>
			
			<!-- Invoice Number -->
			<staticText>
				<reportElement x="350" y="55" width="80" height="15" forecolor="#E5E7EB"/>
