				<text><![CDATA[Sous-total:]]></text>
			</staticText>
			
			<textField pattern="#,##0.00">
				<reportElement x="440" y="30" width="85" height="15" forecolor="#374151"/>
				<textElement textAlignment="Right">
					<font size="11" fontName="Arial"/>
