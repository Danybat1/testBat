					<font size="11" isBold="true" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{clientName}]]></textFieldExpression>
			</textField>
			
			<textField isBlankWhenNull="true">
				<reportElement x="10" y="140" width="240" height="25" forecolor="#6B7280"/>
				<textElement>
					<font size="9" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{clientAddress}]]></textFieldExpression>
			</textField>
			
			<!-- Invoice Details Section -->
			<staticText>
				<reportElement x="285" y="110" width="80" height="15" forecolor="#374151"/>
				<textElement>
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[Date de facture:]]></text>
			</staticText>
			
			<textField>
				<reportElement x="370" y="110" width="155" height="15" forecolor="#1F2937"/>
