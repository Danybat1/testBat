				<textElement textAlignment="Right">
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{invoiceNumber}]]></textFieldExpression>
			</textField>
			
			<!-- Invoice and Client Info Section -->
			<rectangle>
