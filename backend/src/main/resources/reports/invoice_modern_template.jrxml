			</staticText>
			
			<staticText>
				<reportElement x="450" y="15" width="75" height="15" forecolor="#FFFFFF"/>
				<textElement textAlignment="Right">
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[TOTAL]]></text>
			</staticText>
		</band>
	</columnHeader>
	
	<!-- Detail Band - Invoice Items -->
	<detail>
		<band height="25" splitType="Stretch">
			<!-- Alternating row background -->
			<rectangle>
				<reportElement x="0" y="0" width="535" height="25" backcolor="#F9FAFB">
					<printWhenExpression><![CDATA[$V{REPORT_COUNT} % 2 == 0]]></printWhenExpression>
				</reportElement>
				<graphicElement>
					<pen lineWidth="0.0"/>
				</graphicElement>
			</rectangle>
			
			<!-- Item Description -->
			<textField isStretchWithOverflow="true">
				<reportElement x="10" y="5" width="200" height="15" forecolor="#374151"/>
				<textElement>
					<font size="9" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{description}]]></textFieldExpression>
			</textField>
			
			<!-- Quantity -->
			<textField>
				<reportElement x="220" y="5" width="60" height="15" forecolor="#374151"/>
				<textElement textAlignment="Center">
					<font size="9" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
			</textField>
			
			<!-- Unit Price -->
			<textField pattern="#,##0.00">
				<reportElement x="290" y="5" width="80" height="15" forecolor="#374151"/>
				<textElement textAlignment="Right">
					<font size="9" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
			</textField>
			
			<!-- Tax Amount -->
			<textField pattern="#,##0.00" isBlankWhenNull="true">
