				<textElement textAlignment="Right">
					<font size="14" isBold="true" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{totalAmount} + " " + $P{currency}]]></textFieldExpression>
			</textField>
			
			<!-- Notes Section -->
			<staticText>
				<reportElement x="0" y="140" width="80" height="15" forecolor="#374151">
					<printWhenExpression><![CDATA[$P{notes} != null && !$P{notes}.isEmpty()]]></printWhenExpression>
				</reportElement>
				<textElement>
					<font size="11" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[Notes:]]></text>
			</staticText>
			
			<textField isStretchWithOverflow="true" isBlankWhenNull="true">
				<reportElement x="0" y="155" width="535" height="30" forecolor="#6B7280"/>
				<textElement>
					<font size="9" fontName="Arial"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{notes}]]></textFieldExpression>
			</textField>
		</band>
