					<pen lineWidth="0.0"/>
				</graphicElement>
			</rectangle>
			
			<!-- Column Headers -->
			<staticText>
				<reportElement x="10" y="15" width="200" height="15" forecolor="#FFFFFF"/>
				<textElement>
					<font size="10" isBold="true" fontName="Arial"/>
				</textElement>
				<text><![CDATA[DESCRIPTION]]></text>
			</staticText>
			
			<staticText>
				<reportElement x="220" y="15" width="60" height="15" forecolor="#FFFFFF"/>
				<textElement textAlignment="Center">
					<font size="10" isBold="true" fontName="Arial"/>
