            <line>
                <reportElement x="0" y="19" width="555" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineColor="#E5E7EB"/>
                </graphicElement>
            </line>
        </band>
    </detail>

    <!-- Summary -->
    <summary>
        <band height="200" splitType="Stretch">
            <!-- Totals Section -->
            <rectangle>
                <reportElement x="0" y="10" width="555" height="60" backcolor="#F1F5F9"/>
                <graphicElement>
                    <pen lineWidth="1" lineColor="#2563EB"/>
                </graphicElement>
            </rectangle>
            
            <staticText>
                <reportElement x="10" y="15" width="535" height="15" forecolor="#2563EB"/>
                <textElement>
                    <font fontName="Arial" size="12" isBold="true"/>
                </textElement>
                <text><![CDATA[TOTAUX GÉNÉRAUX]]></text>
            </staticText>
            
            <staticText>
                <reportElement x="20" y="35" width="100" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Total Colis:]]></text>
            </staticText>
            
            <textField>
                <reportElement x="120" y="35" width="60" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{totalPackagesSum}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="200" y="35" width="100" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Poids Total:]]></text>
            </staticText>
            
            <textField pattern="#,##0.00 kg">
                <reportElement x="300" y="35" width="80" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$V{totalWeightSum}]]></textFieldExpression>
            </textField>
            
            <staticText>
                <reportElement x="20" y="50" width="100" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
                <text><![CDATA[Volume Total:]]></text>
            </staticText>
            
            <textField pattern="#,##0.000 m³">
                <reportElement x="120" y="50" width="80" height="12"/>
                <textElement>
                    <font fontName="Arial" size="10" isBold="true"/>
                </textElement>
