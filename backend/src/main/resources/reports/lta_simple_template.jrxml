<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd" name="lta_simple_template" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">
	<parameter name="shipperName" class="java.lang.String"/>
	<parameter name="consigneeName" class="java.lang.String"/>
	<parameter name="ltaNumber" class="java.lang.String"/>
	<parameter name="originCity" class="java.lang.String"/>
	<parameter name="destinationCity" class="java.lang.String"/>
	<parameter name="totalWeight" class="java.math.BigDecimal"/>
	<parameter name="calculatedCost" class="java.math.BigDecimal"/>
	
	<title>
		<band height="200">
			<!-- Company Logo -->
			<image>
				<reportElement x="50" y="10" width="80" height="60"/>
				<imageExpression><![CDATA["classpath:static/images/etrans-logo.png"]]></imageExpression>
			</image>
			
			<!-- Company Header -->
			<staticText>
				<reportElement x="200" y="10" width="150" height="30"/>
				<textElement textAlignment="Center">
					<font fontName="Arial" size="18" isBold="true"/>
				</textElement>
				<text><![CDATA[ET-TRANS]]></text>
			</staticText>
			
			<staticText>
				<reportElement x="150" y="50" width="250" height="20"/>
				<textElement textAlignment="Center">
					<font fontName="Arial" size="14" isBold="true"/>
				</textElement>
				<text><![CDATA[LETTRE DE TRANSPORT AERIEN]]></text>
			</staticText>
			
			<!-- LTA Number -->
			<staticText>
				<reportElement x="50" y="80" width="60" height="20"/>
				<textElement>
					<font fontName="Arial" size="12" isBold="true"/>
				</textElement>
				<text><![CDATA[N° LTA:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="120" y="80" width="200" height="20"/>
				<textElement>
					<font fontName="Arial" size="12"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{ltaNumber}]]></textFieldExpression>
			</textField>
			
			<!-- Shipper -->
			<staticText>
				<reportElement x="50" y="110" width="80" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[Expéditeur:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="140" y="110" width="300" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{shipperName}]]></textFieldExpression>
			</textField>
			
			<!-- Consignee -->
			<staticText>
				<reportElement x="50" y="140" width="80" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[Destinataire:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="140" y="140" width="300" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{consigneeName}]]></textFieldExpression>
			</textField>
			
			<!-- Route -->
			<staticText>
				<reportElement x="50" y="170" width="50" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[De:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="110" y="170" width="100" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{originCity}]]></textFieldExpression>
			</textField>
			
			<staticText>
				<reportElement x="220" y="170" width="30" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[Vers:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="260" y="170" width="100" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{destinationCity}]]></textFieldExpression>
			</textField>
		</band>
	</title>
	
	<detail>
		<band height="100">
			<!-- Weight -->
			<staticText>
				<reportElement x="50" y="20" width="80" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[Poids Total:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="140" y="20" width="100" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{totalWeight} + " kg"]]></textFieldExpression>
			</textField>
			
			<!-- Cost -->
			<staticText>
				<reportElement x="50" y="50" width="80" height="20"/>
				<textElement>
					<font fontName="Arial" size="10" isBold="true"/>
				</textElement>
				<text><![CDATA[Coût Total:]]></text>
			</staticText>
			<textField isBlankWhenNull="true">
				<reportElement x="140" y="50" width="100" height="20"/>
				<textElement>
					<font fontName="Arial" size="10"/>
				</textElement>
				<textFieldExpression><![CDATA[$P{calculatedCost} + " USD"]]></textFieldExpression>
			</textField>
		</band>
	</detail>
</jasperReport>
